@model Store.Models.DaneZamawiajacego

@{
    ViewData["Title"] = "Finalizacja zamówienia";
    var czyZalogowany = Context.Session.GetInt32("UzytkownikId") != null;
}

<h1>Finalizacja zamówienia</h1>

@if (!czyZalogowany)
{
    <form asp-action="Finalizacja" method="post">
        <div class="form-group">
            <label asp-for="Imie"></label>
            <input asp-for="Imie" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Nazwisko"></label>
            <input asp-for="Nazwisko" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NumerTelefonu"></label>
            <input asp-for="NumerTelefonu" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Złóż zamówienie</button>
    </form>
}
else
{
    <form asp-action="Finalizacja" method="post">
        <p>Twoje dane zostaną pobrane z konta użytkownika.</p>
        <button type="submit" class="btn btn-success">Złóż zamówienie</button>
    </form>
}
